<!--pages/operation/operation.wxml-->
<view class='container'>
  <form bindsubmit='formSubmit' bindreset='formReset'>
    <view class='row'>
      <text>姓名：</text>
      <input type='text' name='uname' placeholder='请输入姓名' value='{{uname}}'></input>
    </view>
    <view class='row'>
      <text>邮箱：</text>
      <input type='text' name='uemail' placeholder='请输入邮箱' value='{{uemail}}'></input>
    </view>
    <view class='row'>
      <text>密码：</text>
      <input type='text' name='upassword' placeholder='请输入密码' value='{{upassword}}'></input>
    </view>
    <view class='row'>
      <button type='primary' form-type='submit'>提交</button>
     <p></p>
      <button type='primary' form-type='reset'>重置</button>
    </view>
  </form>
</view>
