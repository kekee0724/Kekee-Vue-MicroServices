<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kekee.vue.mapper.UserYmlMapper">
    <!--根据用户ID查询-->
    <select id="getUserById" resultType="cn.kekee.vue.bean.User">
        select *
        from user
        where uid = #{uid}
    </select>
    <!--根据用户名查询-->
    <select id="getUserByName" resultType="cn.kekee.vue.bean.User">
        select *
        from user
        where uname = #{uname}
    </select>
    <!--新增用户-->
    <insert id="insertUser"
            useGeneratedKeys="true" keyProperty="uid"
            parameterType="cn.kekee.vue.bean.User">
        insert into user(uname, uemail, upassword)
        values (#{uname}, #{uemail}, #{upassword})
    </insert>
    <!--根据姓名和密码查询-->
    <select id="getUserByNameAndPassword" resultType="cn.kekee.vue.bean.User">
        select *
        from user
        where uname = #{uname}
          and upassword = #{upassword}
    </select>
</mapper>